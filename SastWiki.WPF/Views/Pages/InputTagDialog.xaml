<Window
    x:Class="SastWiki.WPF.Views.Pages.InputTagDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SastWiki.WPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add a Tag"
    Width="300"
    Height="160"
    mc:Ignorable="d">
    <Grid Margin="10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            VerticalAlignment="Center"
            Text="Add a Tag:" />
        <TextBox
            Name="TagTextBox"
            Grid.Row="1"
            Margin="0,5"
            HorizontalAlignment="Stretch" />
        <Button
            Name="AddTagButton"
            Grid.Row="2"
            Width="75"
            Margin="205,0,0,0"
            Click="AddTagButton_Click"
            Content="Add"
            FontSize="10" Style="{DynamicResource ButtonDefault_Focuse}" />
    </Grid>

</Window>

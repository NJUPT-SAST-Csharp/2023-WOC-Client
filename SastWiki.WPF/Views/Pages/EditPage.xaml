<Page x:Class="SastWiki.WPF.Views.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SastWiki.WPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage"
      DataContext="EditPageVM">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Title:"/>
            <TextBox Text="{Binding Title}"   Height="40" Margin="10"
             xmlns:local="clr-namespace:SastWiki.WPF.Services"
             local:WatermarkService.Watermark="请输入标题"
             local:WatermarkService.IsWatermarkEnabled="True"        />

            <TextBlock Text="Content:"/>
            <TextBox Text="{Binding Content}" Height="120" Margin="10"
             xmlns:local="clr-namespace:SastWiki.WPF.Services"
             local:WatermarkService.Watermark="请输入内容"
             local:WatermarkService.IsWatermarkEnabled="True"/>

            <Button Content="Submit" Command="{Binding SubmitCommand}" Margin="10"/>

            <Button Content="Add Image" Click="AddImage_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>

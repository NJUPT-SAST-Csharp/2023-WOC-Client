<Page
    x:Class="SastWiki.WPF.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SastWiki.WPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SastWiki.WPF.ViewModels"
    Title="HomePage"
    d:DataContext="{d:DesignInstance Type=viewmodels:HomePageVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            FontSize="50">
            SAST Wiki
        </TextBlock>
        <Button
            Grid.Row="2"
            Command="{Binding LatestChangedEntryCommand}">
            Latest Change
        </Button>
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Command="{Binding RandomEntryCommand}">
            Feeling Lucky?
        </Button>
    </Grid>
</Page>

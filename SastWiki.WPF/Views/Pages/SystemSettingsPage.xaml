<Page
    x:Class="SastWiki.WPF.Views.Pages.SystemSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SastWiki.WPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SastWiki.WPF.ViewModels"
    Title="SystemSettingsPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:SystemSettingsVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="50,15">
            <TextBlock FontSize="30" Text="Cache Settings" />
            <Button
                Margin="10"
                Padding="20,5"
                HorizontalAlignment="Left"
                Command="{Binding ClearAllCacheCommand}"
                Content="Clear All Cached Files" />
        </StackPanel>
    </ScrollViewer>
</Page>

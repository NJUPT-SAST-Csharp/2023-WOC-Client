<Window x:Class="SastWiki.WPF.UsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SastWiki.WPF" 
        xmlns:viewmodels="clr-namespace:SastWiki.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:UsernameWindowVM}"
        mc:Ignorable="d"
        Title="UsernameWIndow" Height="500" Width="400" WindowStartupLocation = "CenterScreen">
    <Grid Background="Gray">
        <Button 
            x:Name="Login"
            Content="Login" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Height="45" Width="240"
            Margin="0,385,0,0"
            Command="{Binding NavigateTo_LoginPage}"
            Visibility="{Binding LoginVisibility}"/>
        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
    </Grid>

</Window>

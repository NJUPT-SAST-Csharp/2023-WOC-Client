<Window
    x:Class="SastWiki.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:SastWiki.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SAST Wiki"
    Width="800"
    Height="450"
    Background="{DynamicResource Gray}"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowVM}"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <DockPanel Background="{DynamicResource Gray}">
        <Grid Width="130" DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Command="{Binding GoToHomePageCommand}"
                Content="Home" />
            <Button
                Grid.Row="1"
                Command="{Binding GoToBrowsePageCommand}"
                Content="Browse" />
            <TextBox
                x:Name="SearchBox"
                Grid.Row="2"
                VerticalContentAlignment="Center"
                Cursor="IBeam"
                PreviewKeyUp="SearchBox_KeyUp"
                Text="{Binding SearchBoxText}" />

            <TreeView Grid.Row="3" Background="{DynamicResource Gray}">
                <TreeViewItem Header="测试用数据">
                    <TreeViewItem Header="测试层级" />
                    <TreeViewItem Header="测试层级" />
                </TreeViewItem>
                <TreeViewItem Header="测试用数据">
                    <TreeViewItem Header="测试层级" />
                    <TreeViewItem Header="测试层级" />
                </TreeViewItem>
            </TreeView>
            <Button
                Grid.Row="4"
                Command="{Binding GoToSettingsPageCommand}"
                Content="Settings" />
            <Button
                Grid.Row="5"
                Command="{Binding GoToUserPageCommand}"
                Content="Username" />
        </Grid>
        <Frame x:Name="ContentFrame" />
    </DockPanel>
</Window>

<Window
    x:Class="SastWiki.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SastWiki.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SastWiki.WPF.ViewModels"
    Title="SAST Wiki"
    Width="800"
    Height="450"
    Background="Transparent"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <DockPanel>
        <Grid Width="130" DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Click="NavigateTo_HomePage"
                Content="Home" />
            <Button
                Grid.Row="1"
                Click="NavigateTo_BrowsePage"
                Content="Browse" />
            <TextBox
                x:Name="SearchBox"
                Grid.Row="2"
                VerticalContentAlignment="Center"
                Cursor="IBeam"
                PreviewKeyUp="SearchBox_KeyUp"
                Text="Search" />

            <TreeView Grid.Row="3">
                <TreeViewItem Header="测试用数据">
                    <TreeViewItem Header="测试层级" />
                    <TreeViewItem Header="测试层级" />
                </TreeViewItem>
                <TreeViewItem Header="测试用数据">
                    <TreeViewItem Header="测试层级" />
                    <TreeViewItem Header="测试层级" />
                </TreeViewItem>
            </TreeView>
            <Button
                Grid.Row="4"
                Click="NavigateTo_SettingsPage"
                Content="Settings" />
            <Button Grid.Row="5" 
                    Content="Username" 
                    Click="NavigateToUsernamePage_Click"/>
        </Grid>
        <Frame x:Name="ContentFrame" />
    </DockPanel>
</Window>

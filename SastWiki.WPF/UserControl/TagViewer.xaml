<UserControl
    x:Class="SastWiki.WPF.UserControl.TagViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SastWiki.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SastWiki.WPF.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="TagViewerControl"
    d:DataContext="{d:DesignInstance Type=local:TagViewer}"
    d:DesignHeight="40"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:TagViewerItemConverter x:Key="TagViewerItemConverter" />
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <ItemsControl
            x:Name="TagsContainer"
            ItemTemplate="{StaticResource TagViewerItemTemplate}"
            ItemsPanel="{StaticResource TagViewerItemsPanel}"
            ItemsSource="{Binding Tags, ElementName=TagViewerControl}" />
    </StackPanel>
</UserControl>
